<h2><%= t :products -%></h2>
<%= link_to (t :new_product), new_product_path %>
<table>
<tr>
	<th><%= t 'activerecord.attributes.product.name' -%></th>
	<th><%= t 'activerecord.attributes.product.description' -%></th>
	<th><%= t 'activerecord.attributes.product.category_id' -%></th>
	<th><%= t :options -%></th>	
</tr>
<% @products.each do |c| %>
<tr>
	<td><%= c.name %></td>
	<td><%= c.description %></td>
	<td><%= c.category.name %></td>
    <td>
		<%= link_to (t :edit), edit_product_path(c) %>
		<%= button_to (t :delete), c, :method => :delete %>
	</td>
</tr>
<% end %>
</table>

