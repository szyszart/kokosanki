<h2>Produkty</h2>
<%= link_to "New product", new_product_path %>
<table>
<% @products.each do |c| %>
<tr>
	<td><%= c.name %></td>
	<td><%= c.description %></td>
        <td>
		<%= link_to "Edit", edit_product_path(c) %>
		<%= button_to 'Delete', c, :method => :delete %>
	</td>
</tr>
<% end %>
</table>

<br />
<h2>Kategorie</h2>
<%= link_to "New category", new_category_path %>
<table>
<% @categories.each do |c| %>
<tr>
	<td><%= c.name %></td>
        <td>
		<%= link_to "Edit", edit_category_path(c) %>
		<%= button_to 'Delete', c, :method => :delete %>
	</td>
</tr>
<% end %>
</table>

